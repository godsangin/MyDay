<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.msproject.myhome.mydays">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3136625326865731~8346285691" />

        <activity android:name=".MainActivity"></activity>
        <activity android:name=".EventActivity" />
        <activity
            android:name=".StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:theme="@style/AppTheme" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".InputActivity" />
        <activity android:name=".IntroMainActivity" />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".IntroEventActivity" />
        <activity android:name=".FunctionSettingActivity" />

        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="ACTION.Restart.MyService" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".BroadcastD"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>